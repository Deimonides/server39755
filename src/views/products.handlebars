{{!-- PRODUCTOS --}}
            <div class="container py-5 d-flex flex-wrap justify-content-center">
                {{#each products.docs}}
                    <div class="col-md-6 col-lg-6 col-xl-4 mb-4 mh-200px">
                        <a href="/products/{{this.code}}">
                            <div class="card text-black">
                                <img src="{{thumbnails.[0]}}" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <div class="text-center">
                                        <h5 class="card-title">{{this.title}}</h5>
                                        {{!-- <p class="text-muted mb-4">{{this.description}}</p> --}}
                                    </div>
                                    <div>
                                        {{!-- <div class="d-flex justify-content-between">
                                            <span>Codigo:</span><span>{{this.code}}</span>
                                        </div> --}}
                                        {{!-- <div class="d-flex justify-content-between"> --}}
                                            {{!-- <span>Precio:</span><span>${{this.price}}</span> --}}
                                        <div class="d-flex justify-content-center">
                                            <span>${{this.price}}</span>
                                        </div>
                                        {{!-- <div class="d-flex justify-content-between">
                                            <span>Stock:</span><span>{{this.stock}}</span>
                                        </div> --}}
                                        {{!-- <div class="d-flex justify-content-between">
                                            <span>Categoría:</span><span>{{this.category}}</span>
                                        </div> --}}
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                 {{/each}}
            </div>

{{!-- **************************************************************************************************************************** --}}
{{!-- PAGINADOR --}}
            <div class="d-flex justify-content-center">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        {{!-- link anterior --}}
                        {{#if products.prevLink}}
                            <li class="page-item"> {{!-- SI hay pagina anterior --}}
                        {{else}}
                            <li class="page-item disabled"> {{!-- NO hay pagina anterior --}}
                        {{/if}}
                                <a class="page-link" href="{{products.prevLink}}" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Anterior</span>
                                </a>
                            </li>
                            {{!-- numero de paginas --}}
                            {{#each arrPages}}
                                {{!-- {{#if products.page this}}
                                    <li class="page-item active"><a class="page-link" href="/products?page={{this}}">{{this}}</a></li>
                                {{else}}
                                    <li class="page-item"><a class="page-link" href="/products?page={{this}}">{{this}}</a></li>
                                {{/if}} --}}
                                <li class="page-item"><a class="page-link" href="/products?page={{this}}">{{this}}</a></li>
                            {{/each}}
                            {{!-- link siguiente --}}
                            {{#if products.nextLink}}
                                <li class="page-item"> {{!-- SI hay pagina siguiente --}}
                            {{else}}
                                <li class="page-item disabled"> {{!-- NO hay pagina siguiente --}}
                            {{/if}}
                                <a class="page-link" href="{{products.nextLink}}" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Siguiente</span>
                                </a>
                            </li>
                        </li>
                    </ul>
                </nav>
            </div>
            {{!-- /paginador --}}
        </div>

