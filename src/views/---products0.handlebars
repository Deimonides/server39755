<div>
    <h1 class="text-center">Inventario de productos</h1>

    
    <section style="background-color: transparent;">
        <div class="container py-5 d-flex flex-wrap">
            {{#each products}}
                <div class="col-md-4 col-lg-4 col-xl-4 mb-4">
                    <div class="card text-black">
                        <img src="{{thumbnails.[0]}}" class="card-img-top" alt="..." "> </img>
                        <div class="card-body">
                            <div class="text-center">
                                <h5 class="card-title">{{this.title}}</h5>
                                <p class="text-muted mb-4">{{this.description}}</p>
                            </div>
                            <div>
                                <div class="d-flex justify-content-between">
                                    <span>Codigo:</span><span>{{this.code}}</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Precio:</span><span>${{this.price}}</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Stock:</span><span>{{this.stock}}</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Categor√≠a:</span><span>{{this.category}}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </section>
</div>