<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


            <div class="container d-md-flex align-items-stretch">
        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">
            <h2 class="mb-4 text-center">Carritos de compra</h2>

{{!-- **************************************************************************************************************************** --}}            
{{!-- PRODUCTOS --}}
            <div class="container py-5 d-flex flex-wrap justify-content-center">
                {{#each carts}}
                        <p>CID:   {{this.cid}}</p>
                        <p>User:  {{this.user}}</p>
                        <p>State: {{this.state}}</p>
                        <p>Total: {{this.total}}</p>
                {{/each}}

                






                {{#each carts}}
                    <div class="col-md-6 col-lg-6 col-xl-4 mb-4 mh-200px">
                        <a href="/products/{{this.code}}">
                            <div class="card text-black">
                                <img src="{{this.thumbnails.[0]}}" class="card-img-top" style="max-width: 150px;" alt="...">
                                <div class="card-body">
                                    <div class="text-center">
                                        <h5 class="card-title">{{this.title}}</h5>
                                        <span>{{this.brand}}</span>
                                        {{!-- <p class="text-muted mb-4">{{this.description}}</p> --}}
                                    </div>
                                    <div>
                                        {{!-- <div class="d-flex justify-content-between">
                                            <span>Codigo:</span><span>{{this.code}}</span>
                                        </div> --}}
                                        {{!-- <div class="d-flex justify-content-between"> --}}
                                            {{!-- <span>Precio:</span><span>${{this.price}}</span> --}}
                                        <div class="d-flex justify-content-center mt-2">
                                            <span>${{this.price}}</span>
                                        </div>
                                        {{!-- <div class="d-flex justify-content-between">
                                            <span>Stock:</span><span>{{this.stock}}</span>
                                        </div> --}}
                                        {{!-- <div class="d-flex justify-content-between">
                                            <span>Categor√≠a:</span><span>{{this.category}}</span>
                                        </div> --}}
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                 {{/each}}
            </div>

{{!-- **************************************************************************************************************************** --}}
{{!-- PAGINADOR --}}
            <div class="d-flex justify-content-center">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
            {{!-- link anterior --}}
                        {{#if products.hasPrevPage}}
                            <li class="page-item"> {{!-- SI hay pagina anterior --}}
                        {{else}}
                            <li class="page-item disabled"> {{!-- NO hay pagina anterior --}}
                        {{/if}}
                                {{!-- <a class="page-link" href="/products?limit={{limit}}&page={{products.prevPage}}" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Anterior</span>
                                </a> --}}

                                {{#if filterQ}}
                                <a class="page-link" href="/products?limit={{limit}}&page={{products.prevPage}}&sort={{sortQ}}&{{filterQ}}" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Anterior</span>
                                </a>    
                                {{else}}
                                <a class="page-link" href="/products?limit={{limit}}&page={{products.prevPage}}&sort={{sortQ}}" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Anterior</span>
                                </a>
                                {{/if}}
                            </li>

            {{!-- numero de paginas --}}
                            {{#each arrPages}}
                                {{!-- {{#if products.page this}}
                                    <li class="page-item active"><a class="page-link" href="/products?page={{this}}">{{this}}</a></li>
                                {{else}}
                                    <li class="page-item"><a class="page-link" href="/products?page={{this}}">{{this}}</a></li>
                                {{/if}} --}}
                                <li class="page-item"><a class="page-link" href="{{newUrl}}&page={{this}}">{{this}}</a></li>
                            {{/each}}


            {{!-- link siguiente --}}
                            {{#if products.hasNextPage}}
                            <li class="page-item"> {{!-- SI hay pagina siguiente --}}
                            {{else}}
                            <li class="page-item disabled"> {{!-- NO hay pagina siguiente --}}
                            {{/if}}
                                {{#if filterQ}}
                                <a class="page-link" href="/products?limit={{limit}}&page={{products.nextPage}}&sort={{sortQ}}&{{filterQ}}" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Siguiente</span>
                                </a>    
                                {{else}}
                                <a class="page-link" href="/products?limit={{limit}}&page={{products.nextPage}}&sort={{sortQ}}" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Siguiente</span>
                                </a>
                                {{/if}}

                                    {{!-- <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Siguiente</span> --}}
                                {{!-- </a> --}}
                            </li>
                        </li>
                    </ul>
                </nav>
            </div>
            {{!-- /paginador --}}
        </div>



        <script src="js/jquery.min.js"></script>
        <script src="js/popper.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script src="js/main.js"></script>
