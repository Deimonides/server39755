<script> // CHECKBOX MOSTRAR CONTRASEÑA
    function showPass() {
        var x = document.getElementById("newPass");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>




<div style="margin: 20px ">
    <h1 class="text-center">Registro de nuevo usuario</h1>

    {{!-- **************************************************************************************************************************** --}}
    {{!-- FORM --}}
    <div class="p-8 d-flex flex-wrap justify-content-center" style="margin: 40px">
        <form action="/account/register" method="post" class="p-5 w-50" id="formNewUser">
            {{!-- importante poner los name igual a los campos del schema --}}
            
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text font-weight-bold" id="basic-addon1" style="width: 150px">NOMBRE</span>
                </div>
                <input id="newName" name="first_name" type="text" class="form-control required" value="" placeholder="nombre" aria-label="email" aria-describedby="basic-addon1">
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text font-weight-bold" id="basic-addon1" style="width: 150px">APELLIDO</span>
                </div>
                <input id="newLastName" name="last_name" type="text" class="form-control required" value="" placeholder="apellido" aria-label="email" aria-describedby="basic-addon1">
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text font-weight-bold" id="basic-addon1" style="width: 150px">EDAD</span>
                </div>
                <input id="newAge" name="age" type="number" class="form-control" value="" placeholder="edad" aria-label="edad" aria-describedby="basic-addon1">
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text font-weight-bold" id="basic-addon1" style="width: 150px">EMAIL</span>
                </div>
                <input id="newEmail" name="email" type="email" class="form-control required" value="" placeholder="email@dominio.com" aria-label="email" aria-describedby="basic-addon1">
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text font-weight-bold" id="basic-addon1" style="width: 150px">CONTRASEÑA</span>
                </div>
                <input id="newPass" name="password" type="password" class="form-control required" value="" placeholder="contraseña" aria-label="password" aria-describedby="basic-addon1">
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" onclick="showPass()">
                <label class="form-check-label" for="flexCheckDefault">
                    Mostrar contraseña
                </label>
            </div>
           
            <div class="d-flex justify-content-around  mt-5">
                <button type="submit" class="btn btn-success">Crear usuario</button>
                <a class="btn btn-primary" href="/account/github"><i class="fa fa-github"></i> Usá Github</a>
                <a class="btn btn-secondary" href="/account/login">Iniciar sesión</a>
            </div>

        </form>
    </div>

</div>
